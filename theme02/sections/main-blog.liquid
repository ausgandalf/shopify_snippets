<div class="">
  <div class="container py-10 lg:pt-12 lg:pb-20 customer">
    {%- paginate blog.articles by 18 -%}
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {%- for article in blog.articles -%}
          {%- render 'article-tile', article: article -%}
        {%- endfor -%}
      </div>

      {%- if paginate.pages > 1 -%}
        <div class="mt-[40px] lg:mt-20">
          {% render 'pagination' paginate: paginate %}
        </div>
      {%- endif -%}
    {%- endpaginate -%}
  </div>
</div>

{% schema %}
{
  "name": "Main Blog",
  "settings": [
  ]
}
{% endschema %}
