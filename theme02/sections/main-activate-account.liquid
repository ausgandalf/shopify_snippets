
<div class="customer register bg-grey-1 pt-12 lg:py-32">
  <div class="lg:bg-white px-6 pb-12 lg:py-12 lg:px-12 accountCard  text-left  mx-auto">
    <h3 class="pb-4 font-bold" tabindex="-1">
      {{ 'customer.activate_account.title' | t }}
    </h3>
    <p class="mb-4 text-grey-5">Create your password to activate your account.</p>
    {%- form 'activate_customer_password',
      novalidate: 'novalidate',
      class: 'flex flex-col gap-4'
    -%}
    {%- if form.errors -%}
      <div class="form__message mt-2 mb-2" tabindex="-1" autofocus>
        <p class="flex gap-1 text-sm text-error font-bold ">
          <span class="visually-hidden">{{ 'accessibility.error' | t }} </span>
          <svg class="w-5 h-5" aria-hidden="true" focusable="false" viewBox="0 0 13 13">
            <circle cx="6.5" cy="6.50049" r="5.5" stroke="white" stroke-width="2"/>
            <circle cx="6.5" cy="6.5" r="5.5" fill="#EB001B" stroke="#EB001B" stroke-width="0.7"/>
            <path d="M5.87413 3.52832L5.97439 7.57216H7.02713L7.12739 3.52832H5.87413ZM6.50076 9.66091C6.88091 9.66091 7.18169 9.37267 7.18169 9.00504C7.18169 8.63742 6.88091 8.34917 6.50076 8.34917C6.12061 8.34917 5.81982 8.63742 5.81982 9.00504C5.81982 9.37267 6.12061 9.66091 6.50076 9.66091Z" fill="white"/>
            <path d="M5.87413 3.17832H5.51535L5.52424 3.537L5.6245 7.58083L5.63296 7.92216H5.97439H7.02713H7.36856L7.37702 7.58083L7.47728 3.537L7.48617 3.17832H7.12739H5.87413ZM6.50076 10.0109C7.06121 10.0109 7.5317 9.57872 7.5317 9.00504C7.5317 8.43137 7.06121 7.99918 6.50076 7.99918C5.94031 7.99918 5.46982 8.43137 5.46982 9.00504C5.46982 9.57872 5.94031 10.0109 6.50076 10.0109Z" fill="white" stroke="#EB001B" stroke-width="0.7">
          </svg>
          Please Adjust the Following:
        </p>
        <ul class="text-error list-disc text-sm">
          {%- for field in form.errors -%}
          <li class="text-sm text-error">
            {%- if field == 'form' -%}
              {{ form.errors.messages[field] }}
            {%- else -%}
              <a href="#{{ field }}" class="text-sm text-error">
                {{ form.errors.translated_fields[field] | capitalize }}
                {{ form.errors.messages[field] }}
              </a>
            {%- endif -%}
          </li>
          {%- endfor -%}
        </ul>
      </div>
      {%- endif -%}
      <div class=" input-wrap">
        <input
        class="w-full"
          type="password"
          name="customer[password]"
          id="password"
          autocomplete="new-password"
          placeholder=" "
          {% if form.errors contains 'password' %}
            aria-invalid="true"
            aria-describedby="password-error"
          {% endif %}
        >

        <label class="absolute top-2 left-2" for="password">
          {{ 'customer.activate_account.password' | t }}
        </label>
      </div>

      <div class=" input-wrap">
        <input
        class="w-full"
        type="password"
          name="customer[password_confirmation]"
          id="password_confirmation"
        autocomplete="new-password"
        placeholder=" "
        {% if form.errors contains 'password' %}
          aria-invalid="true"
          aria-describedby="password_confirmation-error"
        {% endif %}
        >
        <label class="absolute top-2 left-2" for="password_confirmation">{{ 'customer.activate_account.password_confirm' | t }}</label>
      </div>

      <button class="block button button--primary-dark !mb-0 !max-w-full"> {{ 'customer.activate_account.submit' | t }}</button>


    {%- endform -%}
  </div>

</div>


{% schema %}
{
  "name": "t:sections.main-activate-account.name",
  "settings": [
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ]
}
{% endschema %}
