

{% if template contains 'article' or template contains 'blog' %}
  {% capture permalinkURL %}{{ shop.url }}{{ article.url }}{% endcapture %}

{% elsif template contains 'product' %}
  {% capture permalinkURL %}{{ shop.url }}{{ product.url }}{% endcapture %}

{% endif %}

<ul class="social-links flex items-center justify-center sm:justify-start gap-4 lg:gap-6 list-none m-0 p-0 w-full md:w-auto" data-permalink="{{ permalinkURL }}">

  {% if settings.social_facebook_link %}
    <li class="m-0 p-0 icon-wrapper relative">
    <a aria-label="Share Facebook" target="_blank" href="//www.facebook.com/sharer.php?u={{ permalinkURL }}" class="relative flex items-center justify-center w-6 h-6">
      {%- render 'icon-facebook' -%}
      <span class="hidden">Share Facebook</span>
    </a>
    </li>
  {% endif %}

  {% if settings.social_twitter_link %}
    <li class="m-0 p-0 icon-wrapper relative">
    <a aria-label="Share Twitter / X" target="_blank" href="//twitter.com/share?url={{ permalinkURL }}" class="relative flex items-center justify-center w-6 h-6">
      {%- render 'icon-twitter' -%}
      <span class="hidden">Share Twitter / X</span>
    </a>
    </li>
  {% endif %}

  {% if settings.social_linkedin_link %}
    <li class="m-0 p-0 icon-wrapper relative">
    <a aria-label="Share Linkedin" target="_blank" href="http://www.linkedin.com/shareArticle?mini=true&url={{permalinkURL}}"  class="relative flex items-center justify-center w-6 h-6" title="Share on LinkedIn">
    {%- render 'icon-linkedin' -%}
    <span class="hidden">Share Linkedin</span>
    </a>
    </li>
  {% endif %}

  {% if settings.social_pinterest_link %}
    <li class="m-0 p-0 icon-wrapper relative">
    <a aria-label="Share Pinterest" target="_blank" href="//pinterest.com/pin/create/button/?url={{ permalinkURL }}&amp;media={{ product.featured_image | product_img_url: 'original' }}&amp;description={{ product.title | escape }}"  class="relative flex items-center justify-center w-6 h-6">
      {%- render 'icon-pinterest' -%}
      <span class="hidden">Share Pinterest</span>
    </a>

  {% endif %}

</ul>
