<ul class="social-links flex items-center justify-between sm:justify-start gap-4 lg:gap-6 list-none m-0 p-0 w-full md:w-auto">
  {%- if settings.social_instagram_link != blank -%}
    <li class="m-0 p-0 icon-wrapper relative">
      <a
        href="{{ settings.social_instagram_link }}"
        aria-label="Instagram"
        target="_blank"
        class="relative flex items-center justify-center w-6 h-6">
        {%- render 'icon-instagram' -%}
        <span class="hidden">Link to Instagram</span>
